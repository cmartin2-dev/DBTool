<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBTool"
        xmlns:Controls="clr-namespace:DBTool.Controls" x:Class="DBTool.MainWindow"
        mc:Ignorable="d"
        Title="DBTool" Height="450" Width="800" Icon="/support.ico" WindowState="Maximized" Background="Black">

    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0">
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Row="1" Grid.Column="0" Content="⚙" Name="rdoSettings" Checked="mainRdo_Checked" ToolTip="Settings"/>
                <RadioButton Grid.Row="0" Grid.Column="0" Content="📊" Name="rdoDashboard" Checked="mainRdo_Checked" ToolTip="Dashboard"/>
                <RadioButton  Grid.Row="2" Grid.Column="0" Content="🗄" Name="rdoDatabase" Checked="mainRdo_Checked" ToolTip="Database"/>
                <RadioButton Grid.Row="3" Grid.Column="0" Content="🌍" Name="rdoEnvironment" Checked="mainRdo_Checked" ToolTip="Environment"/>

            </Grid>
        </DockPanel>
        <Border Grid.Column="1" Grid.RowSpan="2" Background="LightGray" Margin="0,10,0,10"/>

        <DockPanel Name="mainDockPanel" Grid.Column="2" Margin="10" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="4" >
            <!--<Controls:DashboardControl x:Name="dashboardControl" Visibility="Collapsed" Grid.Row="0" Grid.Column="0"/>-->

            <!--<Controls:SettingsControl x:Name="settingsControl" Visibility="Collapsed" Grid.Row="0" Grid.Column="0"/>-->
        </DockPanel>        
    </Grid>
</Window>